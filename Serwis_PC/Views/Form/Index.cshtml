
    <div class="container my-5">
        <h1 class="text-center mb-4">Zgłoś problem</h1>

        <div class="card p-4 shadow-sm">
            <form>
                <div class="mb-3">
                    <label for="phone" class="form-label">Numer telefonu</label>
                    <input type="tel" class="form-control" id="phone" name="phone" placeholder="+48 123 456 789" required>
                </div>

                <div class="mb-3">
                    <label for="problem" class="form-label">Opisz problem</label>
                    <textarea class="form-control" id="problem" name="problem" rows="5" placeholder="Opisz dokładnie, co się dzieje z komputerem..." required></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Wyślij zgłoszenie</button>
            </form>
        </div>
    </div>

    

